{
	"compilerOptions": {
		"module": "Node16",
		"target": "ES2022",
		"moduleResolution": "Node16", // Set moduleResolution back to Node16
		"outDir": "out",
		"lib": [
			"ES2022",
			"DOM",
			"DOM.Iterable"
		],
		"jsx": "react-jsx", // Add JSX support
		"sourceMap": true,
		"rootDir": "src",
		"strict": true,   /* enable all strict type-checking options */
		"skipLibCheck": true, // Temporarily skip library type checking
		/* Additional Checks */
		// "noImplicitReturns": true, /* Report error when not all code paths in function return a value. */
		// "noFallthroughCasesInSwitch": true, /* Report errors for fallthrough cases in switch statement. */
		// "noUnusedParameters": true,  /* Report errors on unused parameters. */
		"types": [
			"node",
			"mocha"
		]
	},
	"exclude": [
		"node_modules/@types/jest",
		"src/webview-ui", // Exclude webview-ui from root tsconfig compilation
		"src/test/**/*" // Exclude test files for now
	]
}
